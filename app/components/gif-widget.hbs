<div class='row widget'>
  <div class='col-8 pl-4 pt-0 pr-5'>
    {{#each @model as |str|}}
      {{#liquid-if (eq this.activeGif str.id) class='gif-trans'}}
        <div>
          <img
            src={{str.images.original.url}}
            class='preview gif-float'
            loading='lazy'
            alt={{str.title}}
          />
          <h6 class='font-weight-light text-center mt-3'>
            {{str.title}}
          </h6>
        </div>
      {{/liquid-if}}
    {{/each}}
  </div>
  <div class='col-4 thumbnail-stripe'>
    {{#each @model as |str|}}
      <img
        role='button'
        src={{str.images.fixed_width_small_still.url}}
        loading='lazy'
        class={{concat 'thumbnail' (if (eq this.activeGif str.id) ' active')}}
        alt={{str.title}}
        {{on 'click' (fn this.setActiveGif str.id)}}
      />
    {{/each}}
  </div>
</div>
{{yield}}